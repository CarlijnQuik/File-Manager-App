<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:text="@string/file_type"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/tvType"
        android:paddingTop="5dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:contentDescription="@string/image_display"
        android:src="@drawable/file_icon"
        android:id="@+id/ivType"
        android:background="@null"
        android:layout_alignLeft="@+id/tvType"
        android:layout_alignStart="@+id/tvType"
        android:layout_alignBottom="@+id/tvFilename"
        android:layout_alignTop="@+id/tvFilename" />

    <TextView
        android:text="@string/name_availability"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:gravity="start"
        android:id="@+id/tvFilename"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_above="@+id/tvType"
        android:layout_toRightOf="@+id/ivType"
        android:layout_width="160dp" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/question_mark"
        android:contentDescription="@string/image_display"
        android:id="@+id/ivLocation"
        android:background="@null"
        android:padding="5dp"
        android:layout_above="@+id/tvType"
        android:layout_toRightOf="@+id/tvFilename"
        android:layout_toEndOf="@+id/tvFilename" />

    <CheckBox
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/checkBox"
        android:visibility="invisible"
        android:layout_above="@+id/tvType"
        android:layout_alignRight="@+id/ibDownloadUpload"
        android:layout_alignEnd="@+id/ibDownloadUpload" />

    <ImageButton
        android:contentDescription="@string/image_display"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:id="@+id/ibDownloadUpload"
        android:background="@drawable/download_icon"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_alignTop="@+id/checkBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>