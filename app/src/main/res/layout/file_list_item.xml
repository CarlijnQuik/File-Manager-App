<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:text="@string/name_availability"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/tvFilename"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivType"
        android:layout_above="@+id/tvType" />

    <ImageButton
        android:contentDescription="@string/image_display"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="5dp"
        android:id="@+id/ibToolbar"
        android:background="@drawable/menu_moreoverflow_normal_holo_light"
        android:layout_alignBottom="@+id/checkBox"
        android:layout_toRightOf="@+id/ivLocation"
        android:layout_toEndOf="@+id/ivLocation" />

    <CheckBox
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/checkBox"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ibToolbar"
        android:layout_toEndOf="@+id/ibToolbar" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/question_mark"
        android:contentDescription="@string/image_display"
        android:id="@+id/ivLocation"
        android:background="@null"
        android:padding="5dp"
        android:layout_alignTop="@+id/ibToolbar"
        android:layout_toRightOf="@+id/tvFilename"
        android:layout_toEndOf="@+id/tvFilename" />

    <TextView
        android:text="@string/filetype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvType"
        android:padding="5dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivLocation" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/image_display"
        android:src="@drawable/file_icon"
        android:id="@+id/ivType"
        android:background="@null"
        android:layout_alignTop="@+id/tvFilename"
        android:layout_alignLeft="@+id/tvType"
        android:layout_alignStart="@+id/tvType"
        android:layout_above="@+id/tvType" />

</RelativeLayout>